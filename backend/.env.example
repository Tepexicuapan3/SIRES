# ============================================
# VARIABLES DE ENTORNO - BACKEND (Flask)
# ============================================

# Entorno de Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Puerto del servidor (debe coincidir con docker-compose.yml)
PORT=5000

# ============================================
# BASE DE DATOS MySQL - RED LOCAL
# ============================================

DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=sires_db
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_CHARSET=utf8mb4

# ============================================
# SEGURIDAD
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================
# Para producción, crear un archivo .env.production con:
# - FLASK_ENV=production
# - FLASK_DEBUG=0
# - Credenciales reales de BD
# - SECRET_KEY y JWT_SECRET_KEY seguros
